<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ShoppingFragment">

    <androidx.appcompat.widget.Toolbar
        android:background="#6FC7D3"
        android:id="@+id/toolbarShopping"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/saveimage"
        app:layout_constraintTop_toBottomOf="@id/toolbarShopping"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/back_search"
        app:layout_constraintTop_toBottomOf="@id/saveimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:text="View"
        android:id="@+id/viewSours"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>